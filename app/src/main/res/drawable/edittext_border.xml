<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền bên trong của EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Thuộc tính của đường viền -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Bạn có thể thay đổi màu viền tại đây -->

    <!-- Bo tròn 4 góc -->
    <corners android:radius="8dp" /> <!-- Bạn có thể thay đổi độ bo tròn tại đây -->

    <!-- Khoảng đệm giữa đường viền và nội dung text bên trong -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>
